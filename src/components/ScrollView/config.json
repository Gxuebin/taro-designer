{
	"type": "ScrollView",
	"name": "可滚动视图",
	"canPlace": true,
	"tips": "使用竖向滚动时，需要给scroll-view一个固定高度，通过 WXSS 设置 height。组件属性的长度单位默认为 px",
	"defaultProps": {
		"scrollX": false,
		"scrollY": false,
		"upperThreshold": 50,
		"lowerThreshold": 50,
		"scrollTop": "",
		"scrollLeft": "",
		"hoverClass": "none",
		"scrollIntoView": "",
		"scrollWithAnimation": false
	},
	"defaultStyles": {
		"height": "100px",
		"padding": "10px"
	},
	"config": [
		{
			"key": "scrollX",
			"type": "Radio",
			"label": "允许横向滚动"
		},
		{
			"key": "scrollY",
			"type": "Radio",
			"label": "允许纵向滚动"
		},
		{
			"key": "upperThreshold",
			"type": "InputNumber",
			"label": "距顶部/左边多远时(单位px)，触发scrolltoupper事件"
		},
		{
			"key": "lowerThreshold",
			"type": "InputNumber",
			"label": "距底部/右边多远时(单位px)，触发scrolltolower事件"
		},
		{
			"key": "scrollTop",
			"type": "InputNumber",
			"label": "设置竖向滚动条位置"
		},
		{
			"key": "scrollLeft",
			"type": "InputNumber",
			"label": "设置横向滚动条位置"
		},
		{
			"key": "scrollIntoView",
			"type": "Input",
			"label": "设置哪个方向可滚动，则在哪个方向滚动到该元素"
		},
		{
			"key": "scrollWithAnimation",
			"type": "Radio",
			"label": "在设置滚动条位置时使用动画过渡"
		}
	]
}
