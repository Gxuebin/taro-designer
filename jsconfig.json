{
	"compilerOptions": {
		"target": "es2015",
		"allowSyntheticDefaultImports": false,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@utils/*": ["src/utils/*"],
			"@components/*": ["src/components/*"],
			"@container/*": ["src/container/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
